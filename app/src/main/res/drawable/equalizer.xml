<?xml version="1.0" encoding="utf-8"?>
<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:drawable="@drawable/ic_equalizer">
    <target android:name="eq">
        <aapt:attr name="android:animation">
            <set android:ordering="sequentially">
                <objectAnimator
                    android:duration="250"
                    android:interpolator="@android:anim/linear_interpolator"
                    android:propertyName="pathData"
                    android:valueFrom="@string/path_eq1"
                    android:valueTo="@string/path_eq2"
                    android:valueType="pathType" />
                <objectAnimator
                    android:duration="250"
                    android:interpolator="@android:anim/linear_interpolator"
                    android:propertyName="pathData"
                    android:valueFrom="@string/path_eq2"
                    android:valueTo="@string/path_eq3"
                    android:valueType="pathType" />
                <objectAnimator
                    android:duration="250"
                    android:interpolator="@android:anim/linear_interpolator"
                    android:propertyName="pathData"
                    android:valueFrom="@string/path_eq3"
                    android:valueTo="@string/path_eq1"
                    android:valueType="pathType" />
            </set>
        </aapt:attr>
    </target>
</animated-vector>
